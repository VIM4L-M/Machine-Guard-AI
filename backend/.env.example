# Machine-Guard IoT Backend Configuration
# Copy this file to .env and update with your actual values

# ========== MQTT Configuration ==========
# MQTT Broker hostname or IP address
MQTT_BROKER=mqtt.example.com
# MQTT Broker port (default: 1883)
MQTT_PORT=1883
# Topic pattern for sensor data ingestion (supports wildcards)
SENSOR_TOPIC=sensors/+/data
# Topic pattern for control/command messages
CONTROL_TOPIC=control/+/command

# ========== Database Configuration ==========
# SQLAlchemy database URL
# SQLite example (simple, no external dependencies):
#   DATABASE_URL=sqlite:///sensors.db
# PostgreSQL example (recommended for production):
#   DATABASE_URL=postgresql://user:password@localhost:5432/machine_guard
# MySQL example:
#   DATABASE_URL=mysql+pymysql://user:password@localhost:3306/machine_guard
DATABASE_URL=sqlite:///sensors.db

# ========== Flask Configuration ==========
# Flask host to bind to (0.0.0.0 for all interfaces)
FLASK_HOST=0.0.0.0
# Flask port
FLASK_PORT=5000
# Flask environment (development or production)
FLASK_ENV=production

# ========== Logging Configuration ==========
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
